<div id="post-<%= post.id %>" class="panel panel-default">
  <div class="panel-heading">
    <img src=" <%= render_user_avatar(post.user, 20) %> " alt="avatar" >
    <b>
      <%= post.user.display_name %> 对商品 「<%= @product.title %>」 发表了评测《 <%= link_to(post.title, product_post_path(@product, post)) %>》,
    <span><%= post.created_at.strftime("%d %b. %Y") %></span>
    <% if current_user && current_user == post.user %>
      <%= link_to('Edit', edit_product_post_path(post.product, post), class: "btn btn-warning btn-xs pull-right", remote: true) %>
      <%= link_to('Delete', product_post_path(@product, post), method: :delete, data: { confirm: "您确定要删除该文章吗？" }, class: "btn btn-danger btn-xs pull-right", remote: true ) %>
    <% end %>
  </div>

  <div class="panel-body">
     <%= render_post_content(post.content) %>
  </div>
</div>
