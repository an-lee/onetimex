
  <h1>Product List</h1>

  <%= link_to("Add new Prodcut", new_admin_product_path, class: "btn btn-default pull-right") %>
  <br>
  <table class="table grid">
    <thead>
      <tr>
        <th>#</th>
        <th width='220'>商品图片</th>
        <th>商品名称</th>
        <th>商品描述</th>
        <th>库存</th>
        <th>价格</th>
        <th>选项</th>
        <th>创建日期</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
            <% else %>
              <%= image_tag("http://placehold,it/200x200&text=No Pic", class: "thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to("edit", edit_admin_product_path(product), class:   "btn btn-warning btn-sm") %> | <%= link_to("delete", admin_product_path(product), method: :delete,  class:   "btn btn-danger btn-sm") %></td>
        <td><%= product.created_at.to_s(:short) %></td>
      </tr>

      <% end %>
    </tbody>
  </table>
