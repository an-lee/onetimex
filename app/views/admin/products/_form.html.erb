<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title, label: "商品名称" %>
  </div>

  <div class="group">
    <%= f.input :description, label: "商品描述" %>
  </div>

  <div class="group">
    <%= f.input :quantity, label: "商品库存" %>
  </div>

  <div class="group">
    <%= f.input :price, label: "商品价格" %>
  </div>

  <%= f.submit "Submit", class:"btn btn-default", :disable_with => 'Submiting...' %>
<% end %>
